# Traefik Configuration
TRAEFIK_CONFIG_DIR=./traefik/config
TRAEFIK_DATA_DIR=./traefik/data
TRAEFIK_LOG_DIR=./traefik/logs
TRAEFIK_DASHBOARD_HOST=traefik.example.com
TZ=Europe/Stockholm

# Domain Configuration
DOMAIN=example.com

# Service Configuration
API_CLIENT_HOST=api.example.com
MATCH_DETECTOR_HOST=detector.example.com
MATCH_PROCESSOR_HOST=processor.example.com
LOGO_COMBINER_HOST=logos.example.com
CALENDAR_SYNC_HOST=calendar.example.com
DRIVE_SERVICE_HOST=drive.example.com

# ACME (Let's Encrypt) Configuration
ACME_EMAIL=your-email@example.com

# Security
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change_this_password
ADMIN_IP_RANGE=192.168.1.0/24

# Docker Configuration
DOCKER_SOCK=/var/run/docker.sock

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# Resource Limits
MEMORY_LIMIT=2g
CPU_LIMIT=1.0
